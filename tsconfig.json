{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "allowJs": true,
    "types": ["cypress"],
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@branding/*": ["node_modules/kidsloop-branding/dist/brands/kidsloop/*"],
      "@/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "assets/css/index.min.css.d.ts",
    "assets/img/img.d.ts"
  ],
  "include": [
    "src",
    "tests",
    "**.js",
    "**.ts"
  ],
  "exclude": [
      "src/pages/account/**"
  ]
}
